generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DB_URL")
}

model User {
  id String @id @default(uuid())

  nickname     String  @unique()
  email        String  @unique()
  password     String
  profilePhoto String
  refreshToken String?

  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
}

